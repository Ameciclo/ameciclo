{
  "kind": "collectionType",
  "collectionName": "workgroups",
  "info": {
    "name": "Grupos de Trabalho",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "telegram_id": {
      "type": "biginteger"
    },
    "icon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "telegram_url": {
      "type": "string"
    },
    "projects": {
      "via": "workgroup",
      "collection": "project"
    },
    "description": {
      "type": "text"
    },
    "Links": {
      "type": "component",
      "repeatable": true,
      "component": "button.links"
    },
    "folder_url": {
      "type": "string"
    },
    "botmembers": {
      "collection": "botmembers",
      "via": "workgroups"
    },
    "washere": {
      "collection": "botmembers",
      "via": "oncethere"
    },
    "directive": {
      "type": "enumeration",
      "enum": [
        "articular",
        "incidir",
        "cultuar",
        "fortalecer"
      ]
    }
  }
}
