{
  "kind": "collectionType",
  "collectionName": "documents_types",
  "info": {
    "name": "Documentos (Tipos)",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "type": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "background_color": {
      "type": "string",
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$",
      "default": "#008888",
      "required": true
    },
    "font_color": {
      "type": "string",
      "default": "#FFFFFF",
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "type",
      "required": true
    },
    "documentos": {
      "via": "type",
      "collection": "documents"
    }
  }
}
