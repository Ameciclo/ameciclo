{
  "kind": "collectionType",
  "collectionName": "libraries",
  "info": {
    "name": "Biblioteca",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "register": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "copies": {
      "type": "integer"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "livro",
        "tecnico",
        "manual",
        "cartilha",
        "revista",
        "outros"
      ]
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "summary": {
      "type": "text"
    },
    "ISBN": {
      "type": "biginteger"
    }
  }
}
